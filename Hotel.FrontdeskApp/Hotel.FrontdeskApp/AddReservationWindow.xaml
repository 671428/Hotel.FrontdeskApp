<Window x:Class="Hotel.FrontdeskApp.AddReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Reservation" Height="350" Width="350">
    <StackPanel Margin="20">

        <TextBlock Text="Room Number:" Margin="0,0,0,5"/>
        <TextBox x:Name="RoomNumberTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Customer Email:" Margin="0,0,0,5"/>
        <TextBox x:Name="CustomerEmailTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Start Date:" Margin="0,0,0,5"/>
        <DatePicker x:Name="StartDatePicker" Margin="0,0,0,10"/>

        <TextBlock Text="End Date:" Margin="0,0,0,5"/>
        <DatePicker x:Name="EndDatePicker" Margin="0,0,0,20"/>

        <Button Content="Save" Width="100" Height="30" HorizontalAlignment="Center" Click="SaveButton_Click"/>

    </StackPanel>
</Window>